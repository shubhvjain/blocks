{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Block Markup",
	"patterns": [
		{
			"include": "#annotations"
		}
	],
	"repository": {
		"annotations":{
			"patterns": [
				{"include":"#declerationAnn"},
				{"include":"#invocationAnn"},
				{"include":"#actionAnn"}
			]
		},
		"declerationAnn": {
      "match": "^(\\.\\[([\\+]?)([\\w\\s\\-]+?)])",
      "name": "keyword.letter"
    },
		"invocationAnn": {
      "match": "\\>\\[([\\w\\s\\-]+?)\\]",
      "name": "keyword.letter"
    },
		"actionAnn": {
      "match": "\\/\\[([\\s\\w\\:\\,\\=\\%\\.\\_\\-\\/\\>\\<]+?)\\]",
      "name": "keyword.letter"
    }
	},
	"scopeName": "source.block"
}